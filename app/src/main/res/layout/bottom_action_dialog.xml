<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha=".8"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Actions"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1e000000"/>

    <LinearLayout
        android:id="@+id/actionContainer1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivActionIcon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_upload_black_24dp"
            app:tint="?attr/colorAccent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvActionText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:text="Upload Image"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionContainer2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivActionIcon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_camera_black_24dp"
            app:tint="?attr/colorAccent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvActionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:text="Use Camera"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>